<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codepresso.codepressoblog.mapper.CommentMapper">
    <select id="findByPostIdAndPage" resultType="com.codepresso.codepressoblog.vo.Comment">
        SELECT *
        FROM comment
        WHERE post_id = #{post_id}
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert id="saveComment">
        INSERT INTO comment(username, content, post_id)
        VALUES (#{comment.username}, #{comment.content}, #{comment.post_id});
    </insert>

    <select id="findAllCommentsOfPost" resultType="com.codepresso.codepressoblog.vo.Comment">
        SELECT *
        FROM comment
        WHERE post_id = #{post_id};
    </select>


</mapper>